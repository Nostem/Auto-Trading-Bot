# Kalshi API
KALSHI_API_KEY=your_kalshi_api_key
KALSHI_API_SECRET=your_kalshi_api_secret
KALSHI_BASE_URL=https://api.elections.kalshi.com/trade-api/v2

# Database
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/kalshi_bot

# LLM for reflections + news classification (use one)
# Option A: MiniMax Coding Plan (Anthropic-compatible)
MINIMAX_CODING_PLAN_API_KEY=
# Option B: Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# News
GNEWS_API_KEY=your_gnews_api_key

# App Security
API_BEARER_TOKEN=generate_a_random_secret_string_here

# Bot Settings
INITIAL_BANKROLL=5000
MAX_POSITION_PCT=0.15
DAILY_LOSS_LIMIT_PCT=0.03
BOT_ENABLED=true
PAPER_TRADE=true
SIZING_MODE=fixed_dollar
FIXED_TRADE_AMOUNT=5
ENVIRONMENT=production

# Bond strategy
BOND_MIN_PRICE=0.94

# Market making
MM_MIN_SPREAD=0.04
MM_MAX_VOLUME_THRESHOLD=10000

# BTC 15-min strategy
BTC_MIN_EDGE=0.04
BTC_MAX_HOURS_TO_RESOLUTION=4.0
